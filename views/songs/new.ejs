<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Song</h1>
    <div class="col-6 offset-3">
        <form action="/songs" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="song[title]">
            </div>
            <input type="file" name="image" id="image">
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="song[image]">
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="description">description</label>
                <input class="form-control" type="text" id="description" name="song[description]">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Song</button>
            </div>
        </form>
        <button>
            <a href="/songs">Song List</a>
        </button>
    </div>
</div>
    