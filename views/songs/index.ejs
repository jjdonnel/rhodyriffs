<% layout('layouts/boilerplate') %>

    <h1 class="sticky-top">All Riffs</h1>
    <% if (currentUser) { %>
    <div>
        <a class="btn btn-success mb-1" href="/songs/new">Add</a>
    </div>
    <% } %>
    <% for (let song of songs) { %>
    <div class="card mb-3 text-center justify-content-center" style="background-image: linear-gradient(to bottom right, rgb(51 142 76), black)">
        <div class="row justify-content-center" >
            <div class="col-md-8 justify-content-center">
                <h2 class="card-title"><%= song.title %></h2>
                <video width="auto" height="300" src="<%= song.image %>#t=0.001" controls preload="auto"></video>
            </div>
        </div>
        <div class="row-md-4 mb-1 justify-content-center text-center">
            <!-- <p class="card-text"><%= song.artist %></p> -->
                <a class="btn btn-primary" href="/songs/<%= song._id %>">View <%= song.title %></a>
        </div>
    </div>
    <% } %>
   